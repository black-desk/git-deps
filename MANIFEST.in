# Include HTML assets and static files
graft git_deps/html

# Include documentation and configuration files
include README.md
include LICENSE.txt
include CHANGES.rst
include AUTHORS.rst
include HISTORY.md
include INSTALL.md
include USAGE.md
include USE-CASES.md
include CONTRIBUTING.md

# Include scripts
include bin/git-fixup

# Include desktop files
include share/gitfile-handler.desktop

# Include test files (optional, for source distributions)
recursive-include tests *.py
recursive-include tests *.sh
recursive-include tests expected_outputs/*

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .gitignore